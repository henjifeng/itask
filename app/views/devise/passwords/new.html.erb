<div class="modal-dialog">
  <div class="modal-content">
	<div class="modal-header">
		<h2 class="text-center">忘记密码?</h2>
	</div>
	<div class="modal-body">
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,class:"form col-lg-12 center-block",role:"form" }) do |f| %>
		  <%= devise_error_messages! %>
		  <div class="form-group">
		    <%= f.email_field :email, autofocus: true,class:"form-control input-lg",placeholder:"请输入您注册时的电子邮箱" %>
		  </div>
		  <div class="actions">
		    <%= f.submit "发送重置密码邮件",class:"btn btn-lg btn-primary btn-block" %>
		  </div>
		<% end %>
	</div>
    <div class="modal-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

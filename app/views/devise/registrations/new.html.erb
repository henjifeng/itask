<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h2 class="text-center">注册</h2>
    </div>
    <div class="modal-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name,html:{class:"form col-lg-12 center-block",role:"form"})) do |f| %>
        <%= devise_error_messages! %>
        <% if flash[:alert].present? %>
    <!--               <p class="notice"><%#= notice %></p>
          <p class="alert"><%#= alert %></p> -->
          <div class="alert alert-warning" style="text-align:center">
            <%= flash[:alert] %>
          </div>
        <% end -%>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true,class:"form-control input-lg",placeholder:"邮箱 example@henjifeng.com"%>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off",class:"form-control input-lg",placeholder: "密码: " + "(最少需要"+ (@minimum_password_length || 6).to_s  + "位密码)" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control input-lg",placeholder:"确认密码"%>
        </div>
        <div class="form-group">
          <div class="input-group">
            <%= rucaptcha_input_tag(class: 'form-control input-lg', placeholder: '验证码') %>
            <span class="input-group-addon input-group-captcha"><%= rucaptcha_image_tag %></span>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "注册",class:"btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
    <div class="modal-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


















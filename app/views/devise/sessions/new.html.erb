<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h2 class="text-center">登录</h2>
    </div>
    <div class="modal-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name),html:{class:"form col-lg-12 center-block",role:"form"}) do |f| %>
        <% if flash[:alert].present? %>
    <!--               <p class="notice"><%#= notice %></p>
          <p class="alert"><%#= alert %></p> -->
          <div class="alert alert-warning" style="text-align:center">
            <%= flash[:alert] %>
          </div>
        <% end -%>
        <div class="form-group">
            <%= f.email_field :email, autofocus: true,class:"form-control input-lg", placeholder: "请输入邮箱" %> 
            <!-- 用户名|邮箱|手机号 -->
        </div>

        <div class="form-group">
            <%= f.password_field :password, autocomplete: "off",class:"form-control input-lg", placeholder: "请输入登录密码" %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label "记住登录信息",style:"display:inline" %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "登录",class:"btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
    <div class="modal-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
















